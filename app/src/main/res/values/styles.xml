<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#33586776</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="divider_x">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/xxgray</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
