<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="20">

        <TextView
            style="@style/text_gray"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:paddingLeft="4dp"
            android:text="名次"
            android:textSize="10sp" />

        <TextView
            style="@style/text_gray"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:text="用户"
            android:textSize="10sp" />

        <TextView
            style="@style/text_gray"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:text="等级"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_tip"
            style="@style/text_gray"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="H值"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/main_rank_my_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="20">

        <TextView
            android:id="@+id/tv_my_index"
            style="@style/text_white"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:paddingLeft="6dp"
            android:text="-"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_my_head_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/main_head_bg" />

            <TextView
                android:id="@+id/tv_my_name"
                style="@style/text_white"
                android:layout_marginLeft="3dp"
                android:text="-"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_level"
            style="@style/text_white"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:text="-"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_my_value"
            style="@style/text_white"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="-"
            android:textSize="10sp" />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@mipmap/main_rank_divider" />

</LinearLayout>