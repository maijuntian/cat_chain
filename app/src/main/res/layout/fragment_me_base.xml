<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/ll_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_property"
                style="@style/text_white"
                android:background="@mipmap/main_button_mid"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="我的资产"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_up_speed"
                style="@style/text_white"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/main_button_mid"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="加速喵钻"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:src="@mipmap/main_cat" />

        <ImageView

            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/me_set" />

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_setting"
            android:layout_marginRight="13dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/me_logout"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/text_white"
                android:gravity="center_vertical"
                android:text="我的基地"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_username"
                style="@style/text_white"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="羞羞喵"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_level"
                style="@style/text_white"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="LV.5"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_introduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:scaleType="fitXY"
        android:src="@mipmap/base_me_content" />


</LinearLayout>