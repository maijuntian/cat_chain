            android:layout_marginRight="124dp"
            android:layout_marginTop="74dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_8"
            style="@style/text_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="110dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_9"
            style="@style/text_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"
            android:layout_marginTop="171dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_10"
            style="@style/text_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="235dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />


    </RelativeLayout>


    <com.mai.cat_chain.widget.SwipeRefreshLayoutCompat
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_h"
                    style="@style/text_white"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/main_icon_go"
                    android:text="H值排行榜"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_m"
                    style="@style/text_white"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/main_icon_go"
                    android:text="喵钻排行榜"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_gray"
                android:layout_marginTop="3dp"
                android:text="更新时间:2018-05-15 24:00"
                android:textSize="10sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_h"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/main_radio_selector"
                    android:button="@color/trans"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_zuan"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/main_radio_selector"
                    android:button="@color/trans" />

            </RadioGroup>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </com.mai.cat_chain.widget.SwipeRefreshLayoutCompat>

</LinearLayout>