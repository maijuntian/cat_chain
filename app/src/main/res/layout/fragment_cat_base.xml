<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/ll_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cheats"
                style="@style/text_white"
                android:background="@mipmap/main_button_mid"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="喵钻秘籍"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_task"
                style="@style/text_white"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/main_button_mid"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="获取H值"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:src="@mipmap/main_cat" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_h_value"
                style="@style/text_white"
                android:drawableLeft="@mipmap/main__icon_h"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="H值：0"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_m_value"
                style="@style/text_white"
                android:layout_marginTop="6dp"
                android:drawableLeft="@mipmap/main_icon_zuan"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="喵钻：0"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_1"
            style="@style/text_white"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="55dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />


        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_2"
            style="@style/text_white"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="99dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_3"
            style="@style/text_white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="133dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_4"
            style="@style/text_white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="203dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_5"
            style="@style/text_white"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="240dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_6"
            style="@style/text_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            android:layout_marginTop="46dp"
            android:drawableTop="@mipmap/main_zuan"
            android:gravity="center"
            android:orientation="vertical"
            android:text="+0.32747"
            android:textSize="9sp"
            android:visibility="invisible" />

        <com.mai.cat_chain.widget.DiamondView
            android:id="@+id/dv_7"
            style="@style/text_white"
